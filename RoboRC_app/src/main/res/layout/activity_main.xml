<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="3"
    android:rowCount="2"
    android:id="@+id/mainGrid"
    android:rowOrderPreserved="true"
    android:useDefaultMargins="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1">

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btConnect"
            android:onClick="btConnectClick"
            android:textOff="@string/btConnectOff"
            android:textOn="@string/btConnectOn"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pbBatteryLevel"
            android:layout_gravity="center"
            android:max="100"
            android:progress="50"
            android:layout_margin="10dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/rl_R"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="bottom|end">

        <net.fadvisor.roborc.MySeekBar
            android:id="@+id/sbR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:thumb="@drawable/seek_thumb"
            android:background="@drawable/seek_back_dark"
            android:progressDrawable="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:rotation="270"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/rl_L"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="bottom|start">

        <net.fadvisor.roborc.MySeekBar
            android:id="@+id/sbL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:thumb="@drawable/seek_thumb"
            android:background="@drawable/seek_back_dark"
            android:progressDrawable="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:rotation="270"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:id="@+id/btnRotateR"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="bottom|end"
        android:onClick="btnRotate_Click" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:id="@+id/btnRotateL"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="bottom|start"
        android:onClick="btnRotate_Click" />

</GridLayout>
